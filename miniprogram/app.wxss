/* 全局样式 */
page {
  background: #f5f5f5;
  font-size: 28rpx;
  color: #333;
}

.container {
  min-height: 100vh;
  box-sizing: border-box;
}

/* 表单相关样式 */
.form-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

/* 列表相关样式 */
.lecture-list {
  padding: 20rpx;
}

.lecture-item {
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.lecture-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.lecture-info {
  color: #666;
  font-size: 26rpx;
}

.lecture-info text {
  margin-right: 20rpx;
} 