.container {
  padding: 30rpx;
  min-height: 100vh;
  background: #f5f5f5;
}

.lecture-list {
  margin-bottom: 30rpx;
}

.lecture-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.lecture-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.lecture-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.lecture-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.category-tag {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 4rpx;
}

.lecture-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  display: inline-block;
}

.lecture-status.upcoming {
  background: #e6f7ff;
  color: #1890ff;
}

.lecture-status.ongoing {
  background: #f6ffed;
  color: #52c41a;
}

.lecture-status.ended {
  background: #f5f5f5;
  color: #999;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
  background: #fff;
  border-radius: 12rpx;
}

.loading-tip {
  text-align: center;
  padding: 20rpx 0;
  color: #999;
  font-size: 24rpx;
} 