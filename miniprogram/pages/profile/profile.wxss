.container {
  min-height: 100vh;
  background: #f5f5f5;
}

.user-info-section {
  background: #fff;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.login-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #07c160;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.nickname {
  font-size: 32rpx;
  color: #333;
}

.function-list {
  background: #fff;
  padding: 0 30rpx;
}

.function-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #eee;
}

.function-item:last-child {
  border-bottom: none;
}

.function-title {
  font-size: 28rpx;
  color: #333;
}

.arrow {
  color: #999;
  font-size: 28rpx;
}

.role {
  font-size: 24rpx;
  color: #666;
  margin-top: 8rpx;
  padding: 4rpx 16rpx;
  background: #f5f5f5;
  border-radius: 20rpx;
}

.logout-section {
  margin-top: 60rpx;
  padding: 0 30rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ff4d4f;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  opacity: 0.8;
} 