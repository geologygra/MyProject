.container {
  padding: 30rpx;
  background: #f5f5f5;
}

.form-item {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.label {
  display: block;
  color: #333;
  font-size: 28rpx;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 8rpx;
}

input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.time-picker {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.picker-item {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

textarea {
  width: 100%;
  height: 300rpx;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}

.hint {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

.poster-upload {
  width: 100%;
  height: 400rpx;
  border: 2rpx dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #fafafa;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #999;
}

.upload-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.upload-text {
  font-size: 28rpx;
}

.poster-preview {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.button-group {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.button-group button {
  margin-bottom: 20rpx;
}

button[type="primary"] {
  background: #07c160;
}

button[type="default"] {
  color: #666;
  background: #fff;
}

/* 分类选择样式 */
.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin: 16rpx 0;
}

.category-item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  background: #f8f8f8;
  font-size: 28rpx;
  color: #999;
  transition: all 0.2s ease;
  border: 2rpx solid #eee;
  min-width: 120rpx;
}

.category-item.hover {
  opacity: 0.8;
}

.category-text {
  margin-right: 8rpx;
}

.check-icon {
  font-size: 24rpx;
  margin-left: 6rpx;
  font-weight: bold;
}

/* 分类颜色定义 */
.category-item[data-key="academic"].selected {
  background: rgba(24, 144, 255, 0.1);
  color: #1890ff;
  border-color: #1890ff;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(24, 144, 255, 0.1);
}

.category-item[data-key="academic"].selected .check-icon {
  color: #1890ff;
}

.category-item[data-key="technology"].selected {
  background: rgba(47, 84, 235, 0.1);
  color: #2f54eb;
  border-color: #2f54eb;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(47, 84, 235, 0.1);
}

.category-item[data-key="technology"].selected .check-icon {
  color: #2f54eb;
}

.category-item[data-key="culture"].selected {
  background: rgba(82, 196, 26, 0.1);
  color: #52c41a;
  border-color: #52c41a;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.1);
}

.category-item[data-key="culture"].selected .check-icon {
  color: #52c41a;
}

.category-item[data-key="science"].selected {
  background: rgba(250, 140, 22, 0.1);
  color: #fa8c16;
  border-color: #fa8c16;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(250, 140, 22, 0.1);
}

.category-item[data-key="science"].selected .check-icon {
  color: #fa8c16;
}

.required {
  color: #ff4d4f;
  margin-left: 4rpx;
}

.hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.add-tag-btn {
  margin: 16rpx 0;
  background: #07c160;
  color: #fff;
}

.selected-tags {
  margin: 20rpx 0;
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.preset-tags {
  margin-top: 30rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.tags-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag {
  padding: 8rpx 20rpx;
  background: #f5f5f5;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.tag.selected {
  background: #07c160;
  color: #fff;
}

.tag .remove {
  margin-left: 8rpx;
  font-size: 24rpx;
}

/* 海报预览样式 */
.poster-preview {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  justify-content: center;
}

.preview-image {
  width: 300rpx;
  height: 400rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
} 